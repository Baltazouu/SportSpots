<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportsSpots.MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" BackgroundColor="Grey" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <FlexLayout >

                <StackLayout BackgroundColor="darkgrey" >

                    <Label Text="Rechercher Un Spot !" FontSize="25" VerticalOptions="Start" HorizontalOptions="Center" Margin="20" HorizontalTextAlignment="Center"/>
                    <Label  Text="Entrez Une Ville :" FontSize="15"/>
                    <Entry   Text="..."></Entry>
                    <Button  Text="LOC"  WidthRequest="60" TextColor="White" BackgroundColor="black"/>

                </StackLayout>
            </FlexLayout>

        </Grid>

        <!-- Grille de Droite : -->

        <Grid Grid.Column="1">
            <WebView Grid.Column="1" Source="https://www.openstreetmap.org/#map=12/48.8566/2.3522" />
        </Grid>

    </Grid>


</ContentPage>
